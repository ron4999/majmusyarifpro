<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/barbg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Puasa"
            android:textColor="@color/white"
            android:id="@+id/titleasmaulhusna"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            android:textSize="20dp"/>
    </RelativeLayout>
    <com.asyabab.majmusyarifpro.activity.kalender.views.CustomCalendarView
        android:id="@+id/activity_main_view_custom_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_gravity="center_horizontal" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/activity_main_text_day_of_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:includeFontPadding="false"
            android:text="XX"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/title"
            android:textSize="80sp"/>

        <LinearLayout
            android:id="@+id/activity_main_view_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_text_day_of_month"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="70dp"
                android:layout_height="2dp"
                android:layout_marginRight="10dp"
                android:background="@color/title"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_white_24dp"/>

            <View
                android:layout_width="70dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:background="@color/title"/>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_main_text_day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_view_separator"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="XXXXXXX"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/title"
            android:textSize="30sp"/>
    </RelativeLayout>


</LinearLayout>